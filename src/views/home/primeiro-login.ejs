<%- include('../partials/header') %>

<main class="primeiro-login-container">
  <h2>Primeiro Acesso - NotaDez</h2>

  <% if (error) { %>
    <div class="primeiro-login-error"><%= error %></div>
  <% } %>

  <form action="/primeiro-login" method="POST" id="primeiroLoginForm">
    <div id="instituicoesContainer">
      <!-- Grupo Instituição + Cursos -->
      <div class="instituicao-group" data-index="0">
        <div class="primeiro-login-section">
          <label>Instituição onde trabalha:</label>
          <input type="text" name="instituicoes[0][nome]" placeholder="Ex: PUC-Campinas" required>
        </div>

        <div class="primeiro-login-section">
          <label>Cursos que leciona nesta instituição:</label>
          <div class="cursos-list" data-instituicao="0">
            <div class="primeiro-login-input-group">
              <input type="text" name="instituicoes[0][cursos][]" placeholder="Ex: Engenharia de Software" required>
              <button type="button" class="primeiro-login-remove-btn remove-curso">✖</button>
            </div>
          </div>
          <button type="button" class="primeiro-login-add-btn add-curso" data-instituicao="0">+ Adicionar curso</button>
        </div>
        <hr class="primeiro-login-divider">
      </div>
    </div>

    <button type="button" class="primeiro-login-add-btn" id="addInstituicao">+ Adicionar outra instituição</button>

    <button type="submit" class="primeiro-login-submit-btn">Salvar e Continuar</button>
  </form>

  <div class="primeiro-login-info">
    <p>Adicione pelo menos uma instituição e um curso para continuar</p>
  </div>

</main>

<script src="/js/primeiro-login.js" defer></script>

<%- include('../partials/footer') %>